pkgname=onscrlib
pkgver=1.0
pkgrel=1
type=meta

depends=(
    'discord' #REMOVE ME
    'bzip2'
    'zlib'
    'libpng'
    'libogg'
    'libvorbis'
    'jpeg'
    'ffmpeg'
    'harfbuzz'
    'freetype'
    'SDL2'
    'smpeg2'
    'SDL2_image'
    'SDL2_mixer'
    'SDL2_gpu'
    'fribidi'
    'libass'
)

if [ "$(getTarget)" != "darwin-iOS" ] && [ "$(getTarget)" != "droid" ]; then
    depends=(${depends[@]} 'lua' 'libusb' 'libepoxy');
fi

if [ "$(getTarget)" == "droid" ] && [ "$(getTargetCPU)" != "arm" ]; then
    depends=(${depends[@]} 'libunwind');
fi

if [ "$(getTarget)" == "linux-like" ] || [ "$(getTarget)" == "win32" ]; then
    depends=(${depends[@]} 'discord');
fi

build() {
    msg "onscrlib built successfully."
}

